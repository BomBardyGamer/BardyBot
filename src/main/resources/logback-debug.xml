<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %boldCyan(%-30.-30thread) %red(%10.10X{jda.shard}) %boldGreen(%-24.-24logger{0}) %highlight(%-6level) %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="Sentry" class="io.sentry.logback.SentryAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %boldCyan(%-30.-30thread) %red(%10.10X{jda.shard}) %boldGreen(%-24.-24logger{0}) %highlight(%-6level) %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="net.dv8tion" level="debug" />
    <logger name="dev.bombardy" level="debug" />
    <logger name="com.sedmelluq" level="debug" />

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>